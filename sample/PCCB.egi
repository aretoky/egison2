(define $sum-of-numbers
  (lambda [$n $m $xs]
    (filter (lambda [$ys] (eq-n? m (foldr + 0 ys)))
            (match-all xs (Set Integer)
              [(loop $l $i (between 1 n) <cons $a_i l> _)
               (loop $l $i (between 1 n) {a_i @l} {})]))))

(test (sum-of-numbers 4 10 {1 3 5}))
